<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="From Galery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/galeryBtn"
        android:layout_alignBaseline="@+id/cameraBtn"
        android:layout_alignBottom="@+id/cameraBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:id="@+id/examTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Add Photo to Examination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addPhotoTV"
        android:layout_below="@+id/examTV"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="From Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/cameraBtn"
        android:layout_below="@+id/addPhotoTV"
        android:layout_alignStart="@+id/examTV" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/nameET"
        android:layout_below="@+id/cameraBtn"
        android:layout_alignStart="@+id/cameraBtn"
        android:layout_alignEnd="@+id/galeryBtn"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/descriptionET"
        android:layout_below="@+id/nameET"
        android:layout_alignStart="@+id/nameET"
        android:layout_marginTop="21dp"
        android:layout_alignEnd="@+id/nameET"
        android:hint="Description" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addPhotoBtn"
        android:layout_below="@+id/descriptionET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/imageView"
        android:layout_below="@+id/addPhotoBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

</RelativeLayout>